# Database
# For local development:
DATABASE_URL=postgresql://compliance_user:compliance_password@localhost:5432/compliance_db
# For Render deployment, this will be automatically set by Render's PostgreSQL service

# Redis
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:3001", "https://compliance-frontend.onrender.com", "https://compliance-ui.onrender.com"]

# Email (Optional)
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=
MAIL_PORT=587
MAIL_SERVER=
MAIL_TLS=true
MAIL_SSL=false

# SMS (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# AI Services (Optional)
OPENAI_API_KEY=

# Environment
ENVIRONMENT=development
DEBUG=true

# Render specific
RENDER=false
